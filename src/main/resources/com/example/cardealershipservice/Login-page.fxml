<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cardealershipservice.LoginController" style="-fx-background-color: lightyellow;">
    <children>
        <!-- Logo Image -->
        <ImageView fx:id="logoImage" fitWidth="400.0" preserveRatio="true" layoutX="20.0" layoutY="20.0">
            <image>
                <Image url="@Logo.png" />
            </image>
        </ImageView>

        <!-- Username Field -->
        <TextField fx:id="usernameField" alignment="CENTER" promptText="Email"
                   prefHeight="41.0" prefWidth="329.0"
                   style="-fx-background-color: transparent; -fx-background-radius: 200; -fx-border-width: 0.5; -fx-border-color: black; -fx-border-radius: 100;"
                   layoutX="515.0" layoutY="200.0">
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </TextField>

        <!-- Password Field -->
        <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Password"
                       prefHeight="41.0" prefWidth="329.0"
                       style="-fx-background-color: transparent; -fx-background-radius: 200; -fx-border-width: 0.5; -fx-border-color: black; -fx-border-radius: 100;"
                       layoutX="515.0" layoutY="260.0">
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </PasswordField>

        <!-- Login Button -->
        <Button fx:id="loginButton" text="Login"
                prefHeight="41.0" prefWidth="86.0"
                onAction="#handleLoginAction"
                style="-fx-background-radius: 20; -fx-background-color: lightsteelblue;"
                layoutX="565.0" layoutY="320.0">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <!-- Register Button -->
        <Button fx:id="registerButton" text="Register"
                prefHeight="41.0" prefWidth="86.0"
                onAction="#handleRegisterRedirect"
                style="-fx-background-radius: 20; -fx-background-color: lightsteelblue;"
                layoutX="677.0" layoutY="320.0">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <!-- Forgot Password Button -->
        <Button fx:id="forgotPasswordButton" text="Forgot Password?"
                prefHeight="41.0" prefWidth="132.0"
                onAction="#handleForgotPassword"
                style="-fx-background-radius: 20; -fx-background-color: lightsteelblue;"
                layoutX="601.0" layoutY="380.0">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <!-- Footer Logo -->
        <ImageView fx:id="footerLogo" fitHeight="144.0" preserveRatio="true" layoutX="20.0" layoutY="450.0">
            <image>
                <Image url="@Logotitle.png" />
            </image>
            <effect>
                <ColorAdjust brightness="-0.3" />
            </effect>
        </ImageView>
    </children>
</AnchorPane>
