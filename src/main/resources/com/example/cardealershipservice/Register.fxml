<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cardealershipservice.RegisterController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@styles.css">
    <VBox alignment="CENTER" spacing="10.0" layoutX="150.0" layoutY="100.0">
        <Label text="Register an Account" styleClass="title-label" />
        <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
        <Button fx:id="registerButton" text="Register" styleClass="register-button" />
    </VBox>
</AnchorPane>

