<?xml version="1.0" encoding="UTF-8"?>

<!-- Himal comment -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: lightyellow;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cardealershipservice.AddAccessoriesController">
    <children>
        <!-- Header Title -->
        <Label alignment="CENTER" layoutX="109.0" layoutY="85.0" prefWidth="586.0" styleClass="label-title" text="Add Accessories">
            <font>
                <Font name="Georgia Bold" size="50.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="0.7196969626979395" startX="1.0" startY="0.5568182107174036">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.14814814925193787" green="0.5263158082962036" blue="0.3750487267971039" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="0.567251443862915" green="0.6191033124923706" blue="0.7894737124443054" />
                            </color>
                        </Stop>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>

        <!-- Input Fields for Accessory Details -->
        <TextField fx:id="accessoryNameField" alignment="CENTER" layoutX="178.0" layoutY="158.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="60.0" prefWidth="419.0" promptText="Accessory Name" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 100; -fx-border-width: 0.5;" styleClass="text-field">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
        </TextField>
        <TextField fx:id="accessoryPriceField" alignment="CENTER" layoutX="178.0" layoutY="249.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="60.0" prefWidth="419.0" promptText="Price" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-radius: 100; -fx-border-width: 0.5;" styleClass="text-field">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
        </TextField>

        <!-- Button to Add Accessory -->
        <Button alignment="CENTER" layoutX="295.0" layoutY="344.0" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#handleAddAccessory" prefHeight="43.0" prefWidth="214.0" style="-fx-background-color: linear-gradient(to top, #ff7f50, #6a5acd);; -fx-background-radius: 100;" styleClass="button-primary" text="Add Accessory" textFill="WHITE">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
        </Button>

        <!-- Navigation Button to Return to Service Queue -->
        <Button fx:id="backButton" alignment="CENTER" layoutX="295.0" layoutY="406.0" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#handleBackToQueue" prefHeight="43.0" prefWidth="214.0" style="-fx-background-color: linear-gradient(to top, #ff7f50, #6a5acd);; -fx-background-radius: 100;" styleClass="button-secondary" text="Back to Queue" textFill="WHITE">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
