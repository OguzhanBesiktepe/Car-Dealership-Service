<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane alignment="CENTER" hgap="15" vgap="15" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cardealershipservice.ServiceQueueController">

    <!-- Column and Row Constraints for Scaling -->
    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="30" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
        <RowConstraints percentHeight="10" />
    </rowConstraints>

    <!-- Waiting for Service Section -->
    <VBox alignment="CENTER" spacing="20" GridPane.columnIndex="0" GridPane.rowSpan="4">
        <Label styleClass="label-section" text="Waiting for Service" />
        <TextField fx:id="waitingNameField" promptText="Customer Name" styleClass="text-field" />
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="addWaitingButton" onAction="#handleAddToWaiting" styleClass="button-primary" text="Add to Waiting" />
        </HBox>
        <VBox fx:id="waitingList" spacing="10">
            <!-- Waiting customers will be added dynamically here -->
        </VBox>
    </VBox>

    <!-- Service List Section -->
    <VBox fx:id="serviceList" spacing="10" GridPane.columnIndex="1" GridPane.rowSpan="3">
        <Label styleClass="label-section" text="Service Queue" />
        <Button fx:id="addServiceButton" onAction="#handleAddToService" styleClass="button-primary" text="Add to Service" />
        <!-- Service customers will be added dynamically here -->
    </VBox>

    <!-- Unified Customer Search Section -->
    <VBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <Label styleClass="label-section" text="Search for Customer" />
        <TextField fx:id="searchField" promptText="Enter Customer Name" styleClass="text-field" />
        <Button fx:id="searchButton" onAction="#handleSearch" styleClass="button-primary" text="Search" />
        <VBox fx:id="searchResults" spacing="10">
            <!-- Search results will be displayed dynamically here -->
        </VBox>
    </VBox>

    <!-- Navigation Buttons -->
    <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <Button fx:id="addNewCustomerButton" onAction="#handleAddNewCustomer" styleClass="button-AddCustomer" text="Add New Customer" />
        <Button fx:id="goToServiceDetailsButton" onAction="#handleGoToServiceDetails" styleClass="button-ServiceDetails" text="Add Service Details" />
    </HBox>
    <HBox alignment="CENTER" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="5">
        <Button fx:id="goToAccessoriesButton" onAction="#handleGoToAccessories" styleClass="button-Accessories" text="Add Accessories" />
        <Button fx:id="goToBillingButton" onAction="#handleGoToBilling" styleClass="button-Billing" text="Go to Billing" />
    </HBox>

    <!-- Back Button -->
    <Button fx:id="backButton" onAction="#handleBack" styleClass="button-secondary" text="Back" GridPane.columnSpan="2" GridPane.rowIndex="6" />

</GridPane>
