<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cardealershipservice.AddNewCustomerController">
    <Label styleClass="label-title" text="Add New Customer" />

    <TextField fx:id="nameField" prefHeight="27.0" prefWidth="429.0" promptText="First , Last Name" styleClass="text-field" />
    <TextField fx:id="contactInfoField" promptText="Contact Information" styleClass="text-field" />
    <TextField fx:id="carModelField" promptText="Car Model" styleClass="text-field" />
    <TextField fx:id="vinField" promptText="VIN Number" styleClass="text-field" />
    <TextField fx:id="mileageField" promptText="Mileage" styleClass="text-field" />

    <Button fx:id="confirmButton" onAction="#handleConfirm" styleClass="button-primary" text="Confirm" />
    <Button fx:id="backButton" onAction="#handleBack" styleClass="button-secondary" text="Back" />
</VBox>
