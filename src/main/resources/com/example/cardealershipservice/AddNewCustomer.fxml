<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: lightyellow;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cardealershipservice.AddNewCustomerController">
    <children>
        <!-- Header Title -->
        <Label alignment="CENTER" layoutX="132.0" layoutY="33.0" prefHeight="76.0" prefWidth="536.0" styleClass="label-title" text="Add New Customer" textAlignment="CENTER">
            <font>
                <Font name="Georgia Bold" size="50.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="0.7083333270116285" startX="1.0" startY="0.26515151515151514">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.8526315689086914" green="0.3063157796859741" blue="0.3063157796859741" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="0.3274853825569153" green="0.46666666865348816" blue="0.8842105269432068" />
                            </color>
                        </Stop>
                    </stops>
                </LinearGradient>
            </textFill>
        </Label>

        <!-- Input Fields for Customer Details -->
        <TextField fx:id="nameField" alignment="CENTER" layoutX="162.0" layoutY="156.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="476.0" promptText="First Name &amp; Last Name" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 0.5; -fx-border-radius: 100;" styleClass="text-field">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
            <effect>
                <ColorAdjust brightness="-0.3" />
            </effect>
        </TextField>
        <TextField fx:id="carModelField" alignment="CENTER" layoutX="162.0" layoutY="260.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="476.0" promptText="Car Model" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 0.5; -fx-border-radius: 100;" styleClass="text-field">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
            <effect>
                <ColorAdjust brightness="-0.3" />
            </effect>
        </TextField>
        <TextField fx:id="vinField" alignment="CENTER" layoutX="162.0" layoutY="315.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="476.0" promptText="VIN Number" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 0.5; -fx-border-radius: 100;" styleClass="text-field">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
            <effect>
                <ColorAdjust brightness="-0.3" />
            </effect>
        </TextField>
        <TextField fx:id="mileageField" alignment="CENTER" layoutX="162.0" layoutY="371.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="476.0" promptText="Mileage" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 0.5; -fx-border-radius: 100;" styleClass="text-field">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
            <effect>
                <ColorAdjust brightness="-0.3" />
            </effect>
        </TextField>

        <!-- Action Buttons -->
        <Button fx:id="confirmButton" alignment="CENTER" layoutX="250.0" layoutY="433.0" onAction="#handleConfirm" prefHeight="46.0" prefWidth="127.0" style="-fx-background-color: linear-gradient(to top, #EF7c24, #96B9D0);; -fx-background-radius: 100;" styleClass="button-primary" text="Confirm" textFill="WHITE">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button fx:id="backButton" alignment="CENTER" layoutX="422.0" layoutY="433.0" onAction="#handleBack" prefHeight="46.0" prefWidth="127.0" style="-fx-background-color: linear-gradient(to top, #EF7c24, #96B9D0);; -fx-background-radius: 100;" styleClass="button-secondary" text="Back" textFill="WHITE">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
        </Button>
        <TextField fx:id="contactInfoField" alignment="CENTER" layoutX="162.0" layoutY="205.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="476.0" promptText="Contact Information" style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-width: 0.5; -fx-border-radius: 100;" styleClass="text-field">
            <font>
                <Font name="Georgia" size="16.0" />
            </font>
            <effect>
                <ColorAdjust brightness="-0.3" />
            </effect>
        </TextField>
    </children>
</AnchorPane>
